<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Points information for @Model.Name</title>
</head>
<body>
    <h1>Points information for @Model.Name</h1>
    @foreach (var stage in Model.Stages)
    {
        <p>
            @foreach (var point in stage.Points)
            {
                <h3>Stage @stage.Number (@stage.Name) - @point.Name</h3>
                <img class="avatar" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.Avatar))" height="100" width="100" />
                <img class="qrcode" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(point.QrCodeArray))" height="100" width="100" />
                <div class="text">@Model.PointInformationText</div>
            }
        </p>
    }
</body>
</html>

